{
  "name": "@ortense/mediator",
  "version": "1.1.0",
  "description": "A minimal implementation for a dependency-free event broker with internal context for front-end",
  "author": "Marcus Ortense",
  "homepage": "https://github.com/ortense/mediator",
  "repository": {
    "type": "git",
    "url": "https://github.com/ortense/mediator"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "build": "tsup",
    "publish": "pnpm test && pnpm lint && pnpm build && npm publish --access public",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.51.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.6"
  },
  "keywords": [
    "mediator",
    "mediator design pattern",
    "observer",
    "pubsub",
    "pubsub",
    "events",
    "emitter",
    "eventemitter",
    "dependency-free",
    "typescript"
  ],
  "files": [
    "./dist",
    "README.md",
    "LICENSE"
  ]
}
