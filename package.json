{
  "name": "@ortense/mediator",
  "version": "1.0.0-alpha-1",
  "description": "A minimal implementation for a dependency-free event broker with internal context for front-end",
  "author": "Marcus Ortense",
  "homepage": "https://github.com/ortense/mediator",
  "repository": {
    "type": "git",
    "url": "https://github.com/ortense/mediator"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "test": "tsx --test **/*.spec.ts",
    "test:watch": "tsx --test --watch **/*.spec.ts",
    "build": "tsup"
  },
  "devDependencies": {
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "mediator",
    "mediator design pattern",
    "observer",
    "pubsub",
    "pubsub",
    "events",
    "emitter",
    "eventemitter",
    "dependency-free",
    "typescript"
  ]
}
